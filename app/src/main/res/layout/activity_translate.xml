<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Translate.Translate"
    android:orientation="vertical"
    android:background="#74B7EC">

    <include layout="@layout/activity_main_bar_activitity"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_margin="16sp"
                android:backgroundTint="#F6F8F3"
                android:background="#4D66E8"
                app:cardCornerRadius="6sp"
                >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:padding="16sp"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:text="결과"
                    />

          <!--      <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/ic_baseline_save_24"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="16sp"
                    android:id="@+id/plus"
                    android:outlineSpotShadowColor="@color/white"
                    ></ImageView>

                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/baseline_surround_sound_24"
                    android:layout_gravity="end|bottom"
                    android:layout_marginBottom="16sp"
                    android:layout_marginRight="64sp"
                    android:id="@+id/english_Sound"
                    android:outlineSpotShadowColor="@color/white"
                    ></ImageView>
-->


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_create_24"
                        android:layout_gravity="end|bottom"
                        android:layout_margin="10sp"
                        android:backgroundTint="#3F51B5"
                        android:id="@+id/btn"
                        ></com.google.android.material.floatingactionbutton.FloatingActionButton>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="번역"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="20sp"
                        ></TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="30sp"
                    android:layout_marginLeft="30sp"
                    >

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_surround_sound_24"
                        android:layout_margin="10sp"
                        android:layout_gravity="end|bottom"
                        android:backgroundTint="#4E4E51"
                        android:id="@+id/english_Sound"
                        ></com.google.android.material.floatingactionbutton.FloatingActionButton>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="음성"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="20sp"
                        ></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_save_24"
                        android:layout_margin="10sp"
                        android:layout_gravity="end|bottom"
                        android:backgroundTint="#673AB7"
                        android:id="@+id/plus"
                        ></com.google.android.material.floatingactionbutton.FloatingActionButton>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="저장"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="20sp"
                        ></TextView>

                </LinearLayout>





            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350sp"
                android:orientation="vertical"
                android:gravity="center"
                android:foregroundGravity="bottom"
                android:background="@drawable/ballen"
                >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="텍스트를 입력하세요!"
                        android:gravity="top">
                    </com.google.android.material.textfield.TextInputEditText>

                <androidx.cardview.widget.CardView
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_marginTop="32sp"
                    android:backgroundTint="#FFC107"
                    app:cardCornerRadius="16sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10sp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/start_lag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:text="한국어"

                            android:textColor="#000000"
                            android:fontFamily="@font/font"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/start_reallag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="ko"
                            android:layout_marginRight="16sp"
                            android:textColor="#000000"
                            android:visibility="invisible"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:id="@+id/rotate"
                            android:layout_width="30sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_baseline_screen_rotation_alt_24"/>

                        <TextView
                            android:id="@+id/end_reallag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:text="en"
                            android:layout_marginLeft="16sp"
                            android:textColor="#000000"
                            android:visibility="invisible"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/end_lag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:text="영어"
                            android:textColor="#000000"
                            android:fontFamily="@font/font"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>



        </LinearLayout>

    </ScrollView>



</LinearLayout>