<layout>

    <data>
        <variable
            name="koGpt"
            type="com.example.english_memo.ai_Project.Generation" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/messageItem_linearlayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:orientation="vertical"
            android:background="@drawable/chat_ballen"
            >

            <TextView
                android:id="@+id/chat_Person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상대"
                android:textSize="18sp"
                android:padding="10sp"
                android:fontFamily="@font/jua"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/messageItem_textView_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:padding="8sp"
                android:text="@{koGpt.text}"
                android:fontFamily="@font/font"
                android:textColor="#000000" />

        </LinearLayout>
<!--        @{koGpt.text}-->

    </LinearLayout>


</layout>

