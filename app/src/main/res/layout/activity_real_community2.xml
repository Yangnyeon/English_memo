<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game.Real_Community2"
    android:orientation="vertical"
    android:background="@drawable/translate_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16sp"
        >

        <TextView
            android:id="@+id/count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 /"
            android:textSize="30sp"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text=" 10"
            ></TextView>



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="단어를 해석하시오!"
        android:layout_gravity="center"
        android:fontFamily="@font/font"
        android:textColor="#000000"
        android:layout_marginTop="30sp"
        ></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:text="English"
        android:layout_gravity="center"
        android:fontFamily="@font/font"
        android:textColor="#000000"
        android:layout_marginTop="120sp"
        android:id="@+id/english_word"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:text="English"
        android:layout_gravity="center"
        android:fontFamily="@font/font"
        android:textColor="#000000"
        android:layout_marginTop="120sp"
        android:visibility="invisible"
        android:id="@+id/english_word_correct"
        ></TextView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="30sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:hint="단어를 입력하세요!"
        android:padding="10sp"
        android:id="@+id/word_edit"
        ></EditText>


    <androidx.cardview.widget.CardView
        android:layout_width="250sp"
        android:layout_height="50sp"
        app:cardCornerRadius="16sp"
        android:layout_marginTop="50sp"
        android:layout_gravity="center"
        android:backgroundTint="#46C9DA"
        android:id="@+id/correct_input"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정답 입력!"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="25sp"
        ></TextView>

    </androidx.cardview.widget.CardView>






</LinearLayout>