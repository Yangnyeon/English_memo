<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_image"
    android:clickable="false"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="회원가입"
        android:layout_gravity="left"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/font"
        android:layout_marginTop="20sp"
        android:layout_margin="16sp"
        ></TextView>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일 입력"
        android:layout_margin="16sp"
        android:textColorHint="#FFFFFF"
        android:theme="@style/TextInputLayoutStyle"
        app:boxStrokeColor="#FFFFFF"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_registration_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:inputType="text"
            android:gravity="top"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 입력"
        android:layout_marginTop="50sp"
        android:textColorHint="#FFFFFF"
        android:layout_margin="16sp"
        android:theme="@style/TextInputLayoutStyle"
        app:boxStrokeColor="#FFFFFF"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_registration_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:gravity="top"
            android:maxLines="1"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 재확인"
        android:layout_marginTop="50sp"
        android:textColorHint="#FFFFFF"
        android:layout_margin="16sp"
        android:theme="@style/TextInputLayoutStyle"
        app:boxStrokeColor="#FFFFFF"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_registration_repassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:gravity="top"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="닉네임 입력"
        android:layout_marginTop="50sp"
        android:textColorHint="#FFFFFF"
        android:layout_margin="16sp"
        android:theme="@style/TextInputLayoutStyle"
        app:boxStrokeColor="#FFFFFF"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="top"
            android:id="@+id/et_registration_name"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"/>

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="250sp"
        android:layout_height="50sp"
        android:layout_marginTop="20sp"
        android:backgroundTint="#0D1D83"
        android:elevation="10dp"
        app:cardCornerRadius="75dp"
        android:layout_gravity="center"
        android:id="@+id/btn_registration">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#00BCD4"
            android:elevation="10dp"
            android:text="Sign up"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:fontFamily="@font/font"
            android:textStyle="bold"></TextView>


    </androidx.cardview.widget.CardView>



</LinearLayout>